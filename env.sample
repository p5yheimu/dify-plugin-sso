# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///dify_sso.db
# PostgreSQL
# DATABASE_URL=postgres://user:password@localhost:5432/dify_sso?sslmode=disable

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# SSO Configuration
SSO_SESSION_TIMEOUT=28800     # 8 hours in seconds
SSO_MAX_CONCURRENT_SESSIONS=5
SSO_AUDIT_LOG_RETENTION_DAYS=2555  # ~7 years

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production 